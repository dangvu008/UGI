<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5.02"
            >
            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView_list_nguoidung_ten"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:maxLines="1"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                />

            <TextView
                android:text="TextView"
                android:id="@+id/textViewMaGoiMon"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:textColor="@color/cardview_light_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nhân Viên Gọi :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_list_NguoiDung_ChucVu"
                    android:padding="5dp"
                    android:textColor="@color/com_facebook_blue" />
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_list_goimon_nhanvien"
                    android:padding="5dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|center_horizontal|end"
            android:padding="5dp"
            android:layout_weight="2"
            android:gravity="right|center|end">
            <TextView
                android:id="@+id/textview_item_nguoidung_trangthai"
                android:layout_width="wrap_content"
                android:text="Online"
                android:textColor="@color/light_green_600"
                android:layout_height="wrap_content"
                android:gravity="center" />
            <ImageView
                android:id="@+id/imageView_list_nguoidung_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert"
                android:layout_gravity="right|end"
                android:layout_marginRight="5dp" />
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>